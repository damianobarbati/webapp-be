{
  "name": "webapp-be",
  "version": "1.0.0",
  "description": "Back-end starter kit for web applications",
  "license": "UNLICENSED",
  "author": "Damiano Barbati <damiano.barbati@gmail.com> (https://github.com/damianobarbati)",
  "repository": "https://github.com/damianobarbati/webapp-be",
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore --fix",
    "test": "NODE_ENV=development NODE_OPTIONS='--loader=quibble -r envk' yarn jesm src/**/*.spec.js",
    "tstest": "NODE_ENV=development nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm -r envk' src/test.ts",
    "serve": "yarn serve:${NODE_ENV:-development}",
    "serve:development": "NODE_ENV=development nodemon -r envk src/index.js",
    "serve:staging": "NODE_ENV=staging ts-node -r envk src/index.js",
    "serve:production": "NODE_ENV=production ts-node -r envk src/index.js"
  },
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@koa/router": "^10.1.1",
    "envk": "^3.0.2",
    "jwt-simple": "^0.5.6",
    "koa": "^2.13.4",
    "koa-better-json": "^2.3.0",
    "koa-better-log": "^1.0.5",
    "koa-body": "^5.0.0",
    "koa-no-trailing-slash": "^2.1.0",
    "nano-id": "^1.1.0",
    "pg-database": "^2.0.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "eslint-config-xs": "^1.2.0",
    "jesm": "^0.0.15",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3"
  }
}
