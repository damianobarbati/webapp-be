{
    "name": "webapp-be",
    "version": "1.0.0",
    "description": "Back-end starter kit for web applications",
    "license": "UNLICENSED",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
    "repository": "https://github.com/damianobarbati/webapp-be",
    "type": "module",
    "engines": {
        "node": "14.5.x"
    },
    "scripts": {
        "eslint": "eslint --ignore-path .gitignore",
        "test": "NODE_ENV=development npx -n='--experimental-vm-modules -r envk' jest --notify",
        "serve": "yarn serve:${NODE_ENV:-development}",
        "serve:development": "NODE_ENV=development nodemon --harmony -r envk src/index.js --ignore app/ --ignore dist/",
        "serve:staging": "node --harmony -r envk src/index.js",
        "serve:production": "node --harmony -r envk src/index.js"
    },
    "dependencies": {
        "@koa/cors": "^3.1.0",
        "@koa/router": "^10.0.0",
        "envk": "^2.0.1",
        "jwt-simple": "^0.5.6",
        "kcors": "^2.2.2",
        "koa": "^2.13.1",
        "koa-better-json": "^2.0.0",
        "koa-better-log": "^1.0.5",
        "koa-body": "^4.2.0",
        "logj": "^2.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/eslint-parser": "^7.11.5",
        "@babel/preset-env": "^7.12.11",
        "core-js": "^3.8.2",
        "eslint": "^7.17.0",
        "eslint-plugin-jest": "^24.0.2",
        "jest": "^26.5.0",
        "jest-environment-node": "^26.5.0",
        "nodemon": "^2.0.7"
    }
}
